{
    "extends": [
        "react-app",
        "react-app/jest",
        "prettier"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "no-console": "warn",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "indent": ["warn", 2],
        "max-len": ["warn", { "code": 120 }],
        "react/jsx-indent": ["warn", 2],
        "react/jsx-indent-props": ["warn", 2],
        "react/jsx-max-props-per-line": ["warn", { "maximum": 1, "when": "multiline" }]
    }
}